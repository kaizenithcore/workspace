rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------------------------------------------
    // Helper functions
    // ---------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(ownerId) {
      return isSignedIn() && request.auth.uid == ownerId;
    }

    function isOwnerOrLegacy() {
      return isSignedIn()
        && (
          resource.data.ownerId == request.auth.uid
          || resource.data.userId == request.auth.uid
        );
    }

    // Require the write to include ownerId == caller's uid
    function incomingOwnerIsMe() {
      return request.resource.data.ownerId == request.auth.uid;
    }

    // ---------------------------------------------------------------
    // Categories
    // ---------------------------------------------------------------
    match /categories/{docId} {
      allow read: if isOwnerOrLegacy();
      allow create: if isSignedIn() && incomingOwnerIsMe();
      allow update: if isOwner(resource.data.ownerId) && incomingOwnerIsMe();
      allow delete: if isOwnerOrLegacy();
    }

    // ---------------------------------------------------------------
    // Projects
    // ---------------------------------------------------------------
    match /projects/{docId} {
      allow read: if isOwnerOrLegacy();
      allow create: if isSignedIn() && incomingOwnerIsMe();
      allow update: if isOwner(resource.data.ownerId) && incomingOwnerIsMe();
      allow delete: if isOwnerOrLegacy();
    }

    // Helper to validate task fields
    function validateTaskFields() {
      let data = request.resource.data;
      return (
        // Description must be string and not too long
        (!('description' in data) || (data.description is string && data.description.size() <= 10000))
        // Subtasks must be array and not too many
        && (!('subtasks' in data) || (data.subtasks is list && data.subtasks.size() <= 100))
        // Dependencies must be array and not too many
        && (!('dependencies' in data) || (data.dependencies is list && data.dependencies.size() <= 50))
        // Blocked must be boolean
        && (!('blocked' in data) || data.blocked is bool)
        // Counts must be numbers
        && (!('subtaskCount' in data) || data.subtaskCount is number)
        && (!('completedSubtasks' in data) || data.completedSubtasks is number)
      );
    }

    // ---------------------------------------------------------------
    // Tasks
    // ---------------------------------------------------------------
    match /tasks/{docId} {
      allow read: if isOwnerOrLegacy();
      allow create: if isSignedIn() && incomingOwnerIsMe() && validateTaskFields();
      allow update: if isOwner(resource.data.ownerId) && validateTaskFields();
      allow delete: if isOwnerOrLegacy();
    }

    // ---------------------------------------------------------------
    // Events
    // ---------------------------------------------------------------
    match /events/{docId} {
      allow read: if isOwnerOrLegacy();
      allow create: if isSignedIn() && incomingOwnerIsMe();
      allow update: if isOwner(resource.data.ownerId);
      allow delete: if isOwnerOrLegacy();
    }

    // ---------------------------------------------------------------
    // Time Entries
    // ---------------------------------------------------------------
    match /time_entries/{docId} {
      allow read: if isOwnerOrLegacy();
      allow create: if isSignedIn() && incomingOwnerIsMe();
      allow update: if isOwner(resource.data.ownerId);
      allow delete: if isOwnerOrLegacy();
    }

    // ---------------------------------------------------------------
    // Pomodoro Sessions
    // ---------------------------------------------------------------
    match /pomodoro_sessions/{docId} {
      allow read: if isOwnerOrLegacy();
      allow create: if isSignedIn() && incomingOwnerIsMe();
      // Pomodoro sessions are immutable once created
      allow update: if false;
      allow delete: if isOwnerOrLegacy();
    }

    // ---------------------------------------------------------------
    // Notifications
    // ---------------------------------------------------------------
    match /notifications/{docId} {
      allow read: if isOwnerOrLegacy();
      allow create: if isSignedIn() && incomingOwnerIsMe();
      // Only allow marking as read
      allow update: if isOwner(resource.data.ownerId)
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      allow delete: if isOwnerOrLegacy();
    }
    // ---------------------------------------------------------------
    // Users
    // ---------------------------------------------------------------
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Allow users to update their own documents
      // We allow updating any fields since users should have full control over their profile
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
    // ---------------------------------------------------------------
    // Goals
    // ---------------------------------------------------------------
    match /users/{userId}/goals/{goalId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth.uid == userId && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth.uid == userId;
    }

    match /users/{userId}/goal_events/{eventId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.ownerId == request.auth.uid;
      allow update: if false;
      allow delete: if request.auth.uid == userId;
    }

    match /users/{userId}/goal_snapshots/{snapshotId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.ownerId == request.auth.uid;
      allow update: if false;
      allow delete: if request.auth.uid == userId;
    }

    match /users/{userId}/challenges/{challengeId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth.uid == userId && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth.uid == userId;
    }

    // ---------------------------------------------------------------
    // Sessions
    // ---------------------------------------------------------------
    match /users/{userId}/sessions/{sessionId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth.uid == userId && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth.uid == userId;
    }

    // ---------------------------------------------------------------
    // Session Templates
    // ---------------------------------------------------------------
    match /users/{userId}/sessionTemplates/{templateId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth.uid == userId && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth.uid == userId;
    }

    // ---------------------------------------------------------------
    // Notebooks and Pages
    // ---------------------------------------------------------------
    // Notebooks stored at user level: users/{userId}/notebooks/{notebookId}
    match /users/{userId}/notebooks/{notebookId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.ownerId == request.auth.uid;
      allow update: if request.auth.uid == userId && resource.data.ownerId == request.auth.uid;
      allow delete: if request.auth.uid == userId;

      // Pages subcollection: users/{userId}/notebooks/{notebookId}/pages/{pageId}
      match /pages/{pageId} {
        allow read: if request.auth.uid == userId;
        allow create: if request.auth.uid == userId;
        allow update: if request.auth.uid == userId;
        allow delete: if request.auth.uid == userId;
      }
    }

    // ---------------------------------------------------------------
    // Notebook Search Index (optional, for faster queries)
    // ---------------------------------------------------------------
    match /users/{userId}/notebookSearchIndex/{docId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;
    }


  }
}
